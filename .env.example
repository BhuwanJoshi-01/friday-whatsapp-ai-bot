# ═══════════════════════════════════════════════════
# WhatsApp AI Personal Operator — Configuration
# ═══════════════════════════════════════════════════
# Copy this file to .env and fill in your values.
# NEVER commit .env to source control.

# === App ===
NODE_ENV=development
LOG_LEVEL=info

# === WhatsApp ===
# 'webjs' (Puppeteer-based) or 'baileys' (WebSocket-based)
LIB=webjs
WEBJS_HEADLESS=true
# Your WhatsApp JID (phone@c.us format). Used for admin commands + summaries.
OWNER_JID=

# === Google Gemini AI ===
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_TOKENS=200
GEMINI_TEMPERATURE=0.7

# === Database ===
DB_PATH=./data/whatsapp-bot.db

# === Safety ===
RATE_LIMIT_MAX=15
RATE_LIMIT_WINDOW_MS=60000
LOOP_DETECT_THRESHOLD=3
OLD_MESSAGE_THRESHOLD_SEC=60
HALT_DURATION_MS=600000

# === Owner Summaries ===
SUMMARY_INTERVAL_HOURS=4
SUMMARY_VOICE_ENABLED=false

# === Google Cloud TTS (for voice summaries) ===
GOOGLE_APPLICATION_CREDENTIALS=
TTS_LANGUAGE=en-US
TTS_VOICE=en-US-Neural2-D

# === n8n Integration ===
N8N_WEBHOOK=

# === Translation ===
DEFAULT_LANGUAGE=en
AUTO_TRANSLATE=true

# === HTTP Server ===
PORT=3009

# === Bot Persona ===
BOT_NAME=Friday
OWNER_NAME=Bhuwan

# === GroQ AI ===
GROQ_API_KEY=
GROQ_MODEL=openai/gpt-oss-120b
GROQ_MAX_TOKENS=8192
GROQ_TEMPERATURE=0.7
